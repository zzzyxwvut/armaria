<?xml version="1.0" encoding="UTF-8"?>
<persistence xmlns="http://java.sun.com/xml/ns/persistence"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://java.sun.com/xml/ns/persistence
	http://java.sun.com/xml/ns/persistence/persistence_2_0.xsd" version="2.0">

	<persistence-unit name="poachers">
		<provider>org.hibernate.jpa.HibernatePersistenceProvider</provider>

		<class>org.example.zzzyxwvut.armaria.domain.User</class>
		<class>org.example.zzzyxwvut.armaria.domain.Book</class>
		<class>org.example.zzzyxwvut.armaria.domain.Loan</class>
		<class>org.example.zzzyxwvut.armaria.domain.Ticket</class>

		<properties>
			<!-- Write all SQL statements to console (and break logging). -->
			<property name="hibernate.show_sql" value="false" />
			<!-- Pretty print the SQL in the log and console. -->
			<property name="hibernate.format_sql" value="true" />
			<!-- Generate comments inside the SQL. -->
			<property name="hibernate.use_sql_comments" value="true" />
			<!-- Collect performance statistics. -->
			<property name="hibernate.generate_statistics" value="true" />
		</properties>
	</persistence-unit>
</persistence>
